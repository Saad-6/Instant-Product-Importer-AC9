<!-- Add Product Modal -->
<div class="modal inmodal" id="addProductModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Add Product</h4>
            </div>
            <div class="modal-body">
                @using (Ajax.BeginForm("AddNewProduct", "TPIAdmin", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onProductAdded" }))
                {
                    <input type="hidden" name="Name" id="productName" />
                    <input type="hidden" name="Sku" id="productSku" />
                    <input type="hidden" name="ImageUrl" id="imageUrl" />
                    <input type="hidden" name="CategoryId" value="-1" />
                    <input type="hidden" name="Description" id="description" />

                    <div class="form-group">
                        <label for="price" class="col-form-label">Price:</label>
                        <input type="number" required class="form-control" name="Price" placeholder="Retail price-" id="price" />
                    </div>
                    <div class="form-group">
                        <label for="cost" class="col-form-label">Cost:</label>
                        <input type="number" required class="form-control" placeholder="Cost" name="Cost" id="cost" />
                    </div>
                    <div class="form-group">
                        <label for="unit" class="col-form-label">Unit:</label>
                        <input type="text" required class="form-control" placeholder="Number of Units ..." name="Unit" id="unit" />
                    </div>
                    <div class="form-group">
                        <label for="category" class="col-form-label">Category:</label>
                        <input type="text" class="form-control" placeholder="Category..." name="Category" id="category" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add Product</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>